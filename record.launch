<launch>
  <!-- Use an ABSOLUTE default path to avoid "~" expansion issues -->
  <arg name="out_dir" default="/home/fizzer/il_training/data/run_001"/>

  <!-- Correct camera topic for your comp world -->
  <arg name="image_topic" default="/B1/rrbot/camera1/image_raw"/>
  <arg name="cmd_vel_topic" default="/B1/cmd_vel"/>

  <!-- Recorder (passes topics via params your script already reads) -->
  <node pkg="controller_pkg" type="recorder.py" name="il_recorder" output="screen">
    <param name="out_dir" value="$(arg out_dir)"/>
    <param name="image"   value="$(arg image_topic)"/>
    <param name="twist"   value="$(arg cmd_vel_topic)"/>
  </node>

  <!-- Keyboard teleop publishing to the SAME cmd_vel -->
  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py"
        name="teleop" output="screen" required="false">
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
  </node>
</launch>